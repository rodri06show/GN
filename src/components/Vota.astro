<script>
  // Encuentra la siguiente celda vacía en la tabla (1..10)
  function nextFreeCell() {
    const cells = document.querySelectorAll('td.name-cell');
    for (const cell of cells) {
      if (!cell.textContent.trim()) return cell;
    }
    return null;
  }

  // Asigna listeners a los botones de participante
  document.querySelectorAll('.participant-btn').forEach(el => {
    // comprobar que el elemento es un botón antes de usar .disabled
    if (!(el instanceof HTMLButtonElement)) return;

    const btn = el; // ahora btn es HTMLButtonElement
    btn.addEventListener('click', () => {
      const name = btn.getAttribute('data-name') || btn.textContent.trim();
      const freeCell = nextFreeCell();
      if (!freeCell) {
        alert('No hay posiciones libres en la tabla.');
        return;
      }

      // Escribe el nombre en la tabla
      freeCell.textContent = name;
      freeCell.classList.add('font-semibold');

      // Deshabilita y atenúa el botón sin error de tipos
      btn.disabled = true;
      btn.classList.add('opacity-40', 'cursor-not-allowed');
    });
  });
</script>